#!/bin/bash
# {{ ansible_managed }}
# All manual changes will be reverted by the next Ansible run,
# Which knows neither pity nor remorse.

echo "Stopping httpd."

{% if httpd_is_systemd %}
sudo /usr/bin/systemctl stop {{ httpd_servicename }}
{% else %}
sudo /sbin/service {{ httpd_servicename }} stop
{% endif %}

echo "Starting httpd."

{% if httpd_is_systemd %}
sudo /usr/bin/systemctl start {{ httpd_servicename }}
{% else %}
sudo /sbin/service {{ httpd_servicename }} start
{% endif %}